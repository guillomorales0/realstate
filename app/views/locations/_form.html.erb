<%= simple_form_for(@location, :remote => true) do |f| %>
<% if @location.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

  <ul>
    <% @location.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <%= f.input :name, label: 'Property Name' %>  
  <%= f.input :address, label: 'Address' %>
  <%= f.select :status, [ ['For sale', 'sale'],['For rent', 'rent'] ],:selected => 'rent', label: 'Property status'%>
  <%= f.input :bedrooms, label: 'Bedrooms' %>
  <%= f.input :baths, label: 'Baths' %>
  <%= f.input :yearbuilt, label: 'Year Built', collection: 1800..2013  %>
  <%= f.input :housesize, label: 'House size' %>
  <%= f.input :lotsize, label: 'Lot size' %>
  <%= f.input :propertytype, label: 'Property Type', hint: 'hint: Single Family Home'  %>
  <%= f.text_area :generaldetails, label:'General Details'  %>        
  <%= f.check_box :garage , label: 'Garage?'%>        
  <%= f.check_box :pool, label: 'Pool?'%>       
  <%= f.check_box :fireplace, label: 'Fireplace'%>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <%= f.hidden_field :gmaps  %>  
  <%= f.button :submit %>  
<% end %>
